@model MyComercio.Models.VentaDetalle

@{
    ViewData["Title"] = "_Create";
    SelectList ventas = ViewBag.ListaVentas;
    SelectList productos = ViewBag.ListaProductos;
}

<h4>VentaDetalle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="_Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdVenta" class="control-label"></label>
                <select asp-for="IdVenta" asp-items="ventas" class="form-control" ></select>
                <span asp-validation-for="IdVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProducto" class="control-label"></label>
                <select asp-for="IdProducto" asp-items="productos" class="form-control" ></select>
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
